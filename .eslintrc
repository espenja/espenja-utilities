{
	"parser": "@typescript-eslint/parser",
	"env": {
		"es6": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended",
		"plugin:prettier/recommended",
		"plugin:@typescript-eslint/eslint-recommended",
		"plugin:@typescript-eslint/recommended"
	],
	"settings": {
		"react": {
			"version": "detect"
		}
	},
	"plugins": ["prettier", "@typescript-eslint"],
	"rules": {
		"no-var": "error",
		"no-extra-semi": "error"
	}
}
